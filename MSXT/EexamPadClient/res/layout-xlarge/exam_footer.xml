<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="100dp">

    <TableLayout
            android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_gravity="center_vertical|center_horizontal"
			android:gravity="center_vertical|center_horizontal"
			android:background="@drawable/bg_color_login_header_text_view">
	    <TableRow 
		     android:layout_width="fill_parent"
		     android:layout_height="fill_parent"
		     android:layout_gravity="center_vertical|center_horizontal"
		     android:padding="2dp">
		     <SeekBar android:id="@+id/completedSeekBar" 
			     android:layout_width="fill_parent"
				 android:layout_height="wrap_content"
				 android:layout_weight="4" 
				 android:layout_gravity="center_vertical"
		         android:gravity="center_vertical"
				 android:max="100"
				 android:progress="50" 
				 android:minHeight="5dp"/>
			<TextView
		        android:id="@+id/completedPercentage"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:layout_marginLeft="10dp"
		        android:textColor="#DA007A"
		        android:textSize="18sp"/>
		</TableRow>	

		<TableRow android:layout_width="fill_parent"
			android:layout_height="fill_parent">
	    	<Button android:id="@+id/preBtn" 
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="2dp" 
				android:layout_weight="1"
				android:text="@string/msg_btn_pre" 
				android:textSize="22sp"
				android:background="@drawable/btn_sys"/>
		        
	    	<TextView android:id="@+id/questionIndex" 
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1" 
						android:layout_gravity="center_horizontal|center_vertical"
						android:gravity="center_horizontal|center_vertical"
						android:textColor="#EF00B6"
						android:textSize="22sp"/>	
	        
	 	    <Button android:id="@+id/nextBtn" 
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1" 
				android:textSize="22sp"
				android:layout_marginRight="2dp"
				android:text="@string/msg_btn_next"
				android:background="@drawable/btn_sys"/>"
	    </TableRow>
	    
    </TableLayout>
</FrameLayout>