<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="70dp">

    <TableLayout
            android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_gravity="center_vertical|center_horizontal"
			android:gravity="center_vertical|center_horizontal"
			android:background="@drawable/bg_color_login_header_text_view">

		<TableRow 
		    android:layout_width="fill_parent"
			android:layout_height="fill_parent">
	    	<Button android:id="@+id/preBtn" 
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="2dp" 
				android:layout_weight="2"
				android:text="@string/msg_btn_pre" 
				android:textSize="22sp"
				android:background="@drawable/btn_sys"/>
				
		     <SeekBar android:id="@+id/completedSeekBar" 
			     android:layout_width="fill_parent"
				 android:layout_height="wrap_content"
				 android:layout_weight="5" 
				 android:layout_gravity="center_vertical"
		         android:gravity="center_vertical"
		         android:layout_marginLeft="10dp"
				 android:max="100"
				 android:progress="50" 
				 android:minHeight="10dp"/>
				 
			<TextView
		        android:id="@+id/completedPercentage"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:layout_marginLeft="10dp"
		        android:textColor="#134316"
		        android:textSize="18sp"/>		        
		        
	 	    <Button android:id="@+id/nextBtn" 
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="2" 
				android:textSize="22sp"
				android:layout_marginRight="2dp"
				android:text="@string/msg_btn_next"
				android:background="@drawable/btn_sys"/>"
	    </TableRow>
	    
    </TableLayout>
</FrameLayout>