<?xml version="1.0" encoding="utf-8"?> 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:background="@drawable/candidate_list_header"
    android:orientation="horizontal" >
               	
    <ImageView android:id="@+id/customBack"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_gravity="center_vertical"
			android:src="@drawable/back_64" 
			android:contentDescription="@string/msg_logo_go_back">
	</ImageView>
	   
    <TextView android:id="@+id/titleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/candidate_detail_resume"
        android:textColor="#ffffff"
        android:textSize="25sp" >
    </TextView>

    <ImageView android:id="@+id/imgLogout"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_gravity="center_vertical|right"
			android:src="@drawable/logout_64" 
			android:contentDescription="@string/msg_logo_go_back">
	</ImageView>
	
</LinearLayout> 
	              