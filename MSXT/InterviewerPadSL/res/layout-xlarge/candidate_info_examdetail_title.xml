<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:descendantFocusability="blocksDescendants">
  
  	   <TableLayout android:id="@+id/indexSortTable"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
	        android:background="@drawable/bg_sub_title"
	        android:onClick="sortEvent">
	   	    <TableRow
	   	    	android:layout_width="wrap_content"
		        android:layout_height="wrap_content">
				  <TextView
				     android:layout_width="0dp"
				     android:layout_height="wrap_content"
				     android:layout_weight="1"
				     android:textSize="25sp"
				     android:textColor="#000000"
				     android:text="@string/label_candidate_title_index"/>
				  <ImageView android:id="@+id/indexSortIcon"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center_vertical|left"
						android:src="@drawable/down_32"
						android:contentDescription="@string/msg_logo_desc">
				  </ImageView>
	  	   </TableRow> 
	   </TableLayout> 

  	   <TableLayout android:id="@+id/catalogSortTable"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
	        android:layout_gravity="center_vertical|right"
	        android:background="@drawable/bg_sub_title"
	        android:onClick="sortEvent">
	   	    <TableRow
	   	    	android:layout_width="wrap_content"
		        android:layout_height="wrap_content">
				  <TextView
				     android:layout_width="0dp"
				     android:layout_height="wrap_content"
				     android:layout_weight="1"
				     android:textSize="25sp"
				     android:textColor="#000000"
				     android:text="@string/label_candidate_title_catalog"/>
				  <ImageView android:id="@+id/catalogSortIcon"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center_vertical|left"
				        android:paddingLeft="8dp"
						android:contentDescription="@string/msg_logo_desc">
				  </ImageView>
	  	   </TableRow> 
	   </TableLayout>	     


  	   <TableLayout android:id="@+id/qnameSortTable"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
	        android:layout_gravity="center_vertical|right"
	        android:background="@drawable/bg_sub_title"
	        android:onClick="sortEvent">
	   	    <TableRow
	   	    	android:layout_width="wrap_content"
		        android:layout_height="wrap_content">
				  <TextView
					     android:layout_width="0dp"
					     android:layout_height="wrap_content"
					     android:layout_weight="1"
					     android:textSize="25sp"
					     android:textColor="#000000"
					     android:text="@string/label_candidate_title_qname"/>
				  <ImageView android:id="@+id/qnameSortIcon"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center_vertical|left"
				        android:paddingLeft="8dp"
						android:contentDescription="@string/msg_logo_desc">
				  </ImageView>
	  	   </TableRow> 
	   </TableLayout>	     

  	   <TableLayout android:id="@+id/qresultSortTable"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
	        android:layout_gravity="center_vertical|right"
	        android:background="@drawable/bg_sub_title"
	        android:onClick="sortEvent">
	   	    <TableRow
	   	    	android:layout_width="wrap_content"
		        android:layout_height="wrap_content">
				  <TextView
					     android:layout_width="0dp"
					     android:layout_height="wrap_content"
					     android:layout_weight="1"
					     android:textSize="25sp"
					     android:textColor="#000000"
					     android:text="@string/label_candidate_title_qresult"/>
				  <ImageView android:id="@+id/qresultSortIcon"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center_vertical|left"
				        android:paddingLeft="8dp"
						android:contentDescription="@string/msg_logo_desc">
				  </ImageView>
	  	   </TableRow> 
	   </TableLayout>
	  
</LinearLayout>