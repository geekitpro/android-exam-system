<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="login_tv_style">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="login_et_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/login_et</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginLeft">3dp</item>
    </style>
    
    <style name="login_btn_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/btn_comm</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    
    <style name="can_list_title_style">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">#6A42FE</item>
    </style>
    
    <style name="can_list_title_tv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="can_list_title_img_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">22sp</item>
    </style>
    
    <style name="can_list_tv_style">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    
    <style name="candidate_btn_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/btn_comm</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    
    <style name="resume_list_tv_style">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    
    <style name="exam_list_tv_style">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    
    <!-- Candidate Detail Style -->
    <style name="can_detail_label_tv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="can_detail_value_tv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_weight">4</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    
    <style name="custom_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>